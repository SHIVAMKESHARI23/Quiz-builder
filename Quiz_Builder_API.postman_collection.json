{
  "info": {
    "name": "Quiz Builder API",
    "description": "Complete API collection for Quiz Builder application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"user@test.com\",\n  \"password\": \"password123\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Register Owner",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Owner\",\n  \"email\": \"owner@test.com\",\n  \"password\": \"password123\",\n  \"role\": \"owner\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@test.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Quizzes",
      "item": [
        {
          "name": "Get All Quizzes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/quizzes",
              "host": ["{{baseUrl}}"],
              "path": ["quizzes"]
            }
          }
        },
        {
          "name": "Get Quizzes with Filters",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/quizzes?category=Science&difficulty=Easy",
              "host": ["{{baseUrl}}"],
              "path": ["quizzes"],
              "query": [
                {
                  "key": "category",
                  "value": "Science"
                },
                {
                  "key": "difficulty",
                  "value": "Easy"
                }
              ]
            }
          }
        },
        {
          "name": "Get Quiz by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/quizzes/:id",
              "host": ["{{baseUrl}}"],
              "path": ["quizzes", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "quiz_id_here"
                }
              ]
            }
          }
        },
        {
          "name": "Create Quiz (Owner)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Sample Quiz\",\n  \"description\": \"This is a sample quiz\",\n  \"category\": \"Science\",\n  \"difficulty\": \"Easy\",\n  \"timeLimit\": 10,\n  \"questions\": [\n    {\n      \"questionText\": \"What is H2O?\",\n      \"options\": [\"Water\", \"Oxygen\", \"Hydrogen\", \"Carbon\"],\n      \"correctAnswer\": 0\n    },\n    {\n      \"questionText\": \"What is the capital of France?\",\n      \"options\": [\"London\", \"Berlin\", \"Paris\", \"Madrid\"],\n      \"correctAnswer\": 2\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/quizzes",
              "host": ["{{baseUrl}}"],
              "path": ["quizzes"]
            }
          }
        },
        {
          "name": "Update Quiz (Owner)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Quiz Title\",\n  \"description\": \"Updated description\",\n  \"category\": \"Science\",\n  \"difficulty\": \"Medium\",\n  \"timeLimit\": 15,\n  \"questions\": [\n    {\n      \"questionText\": \"Updated question?\",\n      \"options\": [\"A\", \"B\", \"C\", \"D\"],\n      \"correctAnswer\": 1\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/quizzes/:id",
              "host": ["{{baseUrl}}"],
              "path": ["quizzes", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "quiz_id_here"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Quiz (Owner)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/quizzes/:id",
              "host": ["{{baseUrl}}"],
              "path": ["quizzes", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "quiz_id_here"
                }
              ]
            }
          }
        },
        {
          "name": "Get My Quizzes (Owner)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/quizzes/my-quizzes",
              "host": ["{{baseUrl}}"],
              "path": ["quizzes", "my-quizzes"]
            }
          }
        },
        {
          "name": "Get Quiz Attempts (Owner)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/quizzes/:id/attempts",
              "host": ["{{baseUrl}}"],
              "path": ["quizzes", ":id", "attempts"],
              "variable": [
                {
                  "key": "id",
                  "value": "quiz_id_here"
                }
              ]
            }
          }
        }
      ]
    },
